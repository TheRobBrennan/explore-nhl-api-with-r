{
	"name": "Posit RStudio (rocker/rstudio)",
	"dockerComposeFile": "${localWorkspaceFolder}/docker/rstudio/docker-compose.yml",
	"service": "rstudio",
	"mounts": [
		"source=${localWorkspaceFolder}/examples,target=/home/rstudio/examples,type=bind,consistency=cached"
	],
	"workspaceFolder": "/home/rstudio/examples/",
	"customizations": {
		"vscode": {
			"extensions": [
				"REditorSupport.r",
				"RDebugger.r-debugger"
			]
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "R -q -e 'renv::install()'",
	// "postCreateCommand": "R -e 'install.packages(c(\"package1\", \"package2\"))'"
	"postCreateCommand": "R -e 'install.packages(\"languageserver\")'"
}